var test = (import "utils").test;
var throws = (import "utils").throws;

# TODO: should options have == ?

test "basic stuff" {
    var lol = "hi";
    var olol = (new Option lol);
    assert (olol.value `same_object` lol);
    assert (not olol.is_none);
    assert ((olol.to_debug_string) == "<Option: \"hi\">");
};

test "none" {
    assert (none `is_instance_of` Option);
    assert none.is_none;
    assert ((none.to_debug_string) == "none");
    throws ValueError {
        var lol = none.value;
    };
};
